---
import DefaultLayout from "@/layouts/default-layout.astro";
import Timeline from "@/components/organisms/timeline.astro";
import career from "@/data/career.json";
---

<DefaultLayout title="Parcours – Virgil CHAREYRE">
  <div class="container">
    <header class="page-header">
      <h1 class="page-header__title" data-scroll-animate="punk-zoom">
        Parcours
      </h1>
      <p class="page-header__description" data-scroll-animate data-delay="100">
        Mon cheminement professionnel et académique, façonné par une passion
        pour le développement web accessible et éthique, ainsi que par une
        volonté constante d'apprendre et d'évoluer.
      </p>
    </header>

    <div data-scroll-animate data-delay="150">
      <Timeline items={career} />
    </div>
  </div>
</DefaultLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .page-header__title {
    margin-bottom: var(--space-md);
  }

  .page-header__description {
    font-size: var(--font-size-base);
    color: var(--color-on-surface);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Description plus large sur grands écrans - Utilise les variables */
  @media (min-width: 1400px) {
    .page-header__description {
      max-width: 650px;
      font-size: var(--font-size-medium);
    }
  }

  @media (min-width: 1600px) {
    .page-header__description {
      max-width: 700px;
      font-size: var(--font-size-large);
    }
  }

  @media (min-width: 1920px) {
    .page-header__description {
      max-width: 750px;
      font-size: var(--font-size-large);
    }
  }
</style>
