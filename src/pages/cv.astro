import { Image } from 'astro:assets';
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { url } from '@utils/url';
import profileImage from '@assets/images/profile.jpg';
import { profile, contact, availability, languages, techStack } from '@config/cv';

// Get all content from collections
const allExperiences = await getCollection('experiences');
const allSkills = await getCollection('skills');
const allProjects = await getCollection('projects');

// Sort experiences by date (anti-chronological)
const sortedExperiences = allExperiences.sort(
  (a, b) => new Date(b.data.startDate).getTime() - new Date(a.data.startDate).getTime()
);

// Separate work and education
const workExperiences = sortedExperiences.filter((e) => e.data.type === 'work');
const educationExperiences = sortedExperiences.filter((e) => e.data.type === 'education');

// Sort skills by category and order
const technicalSkills = allSkills
  .filter((s) => s.data.category === 'technical')
  .sort((a, b) => a.data.order - b.data.order);
const humanSkills = allSkills
  .filter((s) => s.data.category === 'human')
  .sort((a, b) => a.data.order - b.data.order);

// Sort projects by order
const sortedProjects = allProjects.sort((a, b) => a.data.order - b.data.order);

// Format date helper
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('fr-FR', { month: 'short', year: 'numeric' });
}

// Get ISO date for datetime attribute
function getISODate(dateStr: string): string {
  return dateStr; // Already in YYYY-MM format or YYYY-MM-DD
}

// Level to text helper
function levelToText(level: number): string {
  if (level >= 8) return 'Confirmé';
  if (level >= 6) return 'Avancé';
  if (level >= 4) return 'Intermédiaire';
  return 'Débutant';
}

// Clean markdown and extract first paragraph for CV display
function cleanMarkdownForCV(text: string): string {
  if (!text) return '';

  // Get first paragraph (before double newline)
  const firstParagraph = text.split('\n\n')[0] || text;

  // Remove markdown formatting
  return (
    firstParagraph
      // Remove bold/italic
      .replace(/\*\*([^*]+)\*\*/g, '$1')
      .replace(/\*([^*]+)\*/g, '$1')
      .replace(/__([^_]+)__/g, '$1')
      .replace(/_([^_]+)_/g, '$1')
      // Remove links, keep text
      .replace(/\[([^\]]+)\]\([^)]+\)/g, '$1')
      // Remove headers
      .replace(/^#{1,6}\s+/gm, '')
      // Remove bullet points
      .replace(/^[-*+]\s+/gm, '')
      // Clean up extra whitespace
      .replace(/\n/g, ' ')
      .replace(/\s+/g, ' ')
      .trim()
  );
}

// Extract mission points (smarter version that prioritizes mission-related content)
function extractMissionPoints(text: string, maxPoints: number = 4): string[] {
  if (!text) return [];

  const points: string[] = [];
  const stackKeywords = ['stack', 'technique', 'technologie', 'outil'];
  const missionKeywords = ['mission', 'responsabilit', 'réalisation', 'contribution'];

  // Try to find bullets under mission-related headers first
  const headerRegex = /\*\*([^*]+)\*\*\s*:?\s*\n([\s\S]*?)(?=\*\*[^*]+\*\*|$)/g;
  let headerMatch;

  while ((headerMatch = headerRegex.exec(text)) !== null && points.length < maxPoints) {
    const headerText = headerMatch[1].toLowerCase();
    const sectionContent = headerMatch[2];

    // Skip stack/technique sections
    if (stackKeywords.some((kw) => headerText.includes(kw))) {
      continue;
    }

    // Prioritize mission sections
    if (missionKeywords.some((kw) => headerText.includes(kw))) {
      const sectionBulletRegex = /^[-*+]\s+(.+)$/gm;
      let bulletMatch;
      while (
        (bulletMatch = sectionBulletRegex.exec(sectionContent)) !== null &&
        points.length < maxPoints
      ) {
        const cleanPoint = bulletMatch[1]
          .replace(/\*\*([^*]+)\*\*/g, '$1')
          .replace(/\*([^*]+)\*/g, '$1')
          .trim();
        if (cleanPoint.length > 10) {
          points.push(cleanPoint);
        }
      }
    }
  }

  // If no mission-specific points found, fall back to filtered bullets
  if (points.length === 0) {
    // Remove stack technique sections first
    let cleanedText = text;
    const stackSectionRegex =
      /\*\*[^*]*(?:stack|technique|technologie)[^*]*\*\*\s*:?\s*\n[\s\S]*?(?=\*\*[^*]+\*\*|\n\n|$)/gi;
    cleanedText = cleanedText.replace(stackSectionRegex, '');

    const bulletRegex = /^[-*+]\s+(.+)$/gm;
    let match;
    while ((match = bulletRegex.exec(cleanedText)) !== null && points.length < maxPoints) {
      const cleanPoint = match[1]
        .replace(/\*\*([^*]+)\*\*/g, '$1')
        .replace(/\*([^*]+)\*/g, '$1')
        .trim();
      // Filter out short points and likely stack items (containing ":" at start)
      if (cleanPoint.length > 10 && !cleanPoint.match(/^[A-Za-z]+\s*:/)) {
        points.push(cleanPoint);
      }
    }
  }

  return points;
}

// Format availability string
function formatAvailability(): string {
  const parts: string[] = [];
  if (availability.available) {
    parts.push('Disponible');
  }
  if (availability.types.length > 0) {
    parts.push(availability.types.join(' / '));
  }
  if (availability.locations.length > 0) {
    parts.push(availability.locations.join(' / '));
  }
  return parts.join(' • ');
}
