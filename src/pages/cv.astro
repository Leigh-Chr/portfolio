<BaseLayout
  title={`CV - ${profile.name} - ${profile.title}`}
  description={`CV de ${profile.name} - ${profile.title} spécialisé TypeScript, React, Svelte et Node.js. Disponible en téléchargement PDF.`}
>
  <!-- JSON-LD Resume structured data for SEO and ATS -->
  <Fragment slot="head">
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Person',
        name: profile.name,
        jobTitle: profile.title,
        description: profile.summary,
        email: contact.email,
        url: 'https://leigh-chr.github.io/portfolio/',
        image: 'https://leigh-chr.github.io/portfolio/images/profile.jpg',
        address: {
          '@type': 'PostalAddress',
          addressLocality: 'Grenoble',
          addressCountry: 'FR',
        },
        sameAs: [contact.linkedin, contact.github],
        knowsAbout: techStack,
        knowsLanguage: languages.map((l) => l.name),
        hasCredential: educationExperiences.map((exp) => ({
          '@type': 'EducationalOccupationalCredential',
          name: exp.data.title,
          recognizedBy: {
            '@type': 'Organization',
            name: exp.data.organization,
          },
        })),
        hasOccupation: workExperiences.map((exp) => ({
          '@type': 'Occupation',
          name: exp.data.title,
          occupationLocation: {
            '@type': 'City',
            name: exp.data.location || 'Grenoble',
          },
        })),
      })}
    />
  </Fragment>

  <!-- Print button (hidden on print) -->
  <div class="fixed bottom-6 right-6 z-50 print:hidden">
    <button
      onclick="window.print()"
      class="btn-chunky-primary flex items-center gap-2"
      aria-label="Imprimer ou enregistrer en PDF"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"
        ></path>
      </svg>
      <span>Enregistrer en PDF</span>
    </button>
  </div>

  <article class="cv-container" itemscope itemtype="https://schema.org/Person">
    <!-- Header - ATS-optimized single column layout -->
    <header class="cv-header">
      <!-- Identity Block -->
      <div class="cv-identity-block">
        <div class="cv-photo">
          <Image
            src={profileImage}
            alt={profile.name}
            class="cv-photo-img"
            width={120}
            height={150}
            format="webp"
            quality={90}
            itemprop="image"
          />
        </div>
        <div class="cv-identity">
          <h1 class="cv-name" itemprop="name">{profile.name}</h1>
          <p class="cv-title" itemprop="jobTitle">{profile.title}</p>
          {profile.subtitle && <p class="cv-subtitle">{profile.subtitle}</p>}
          {
            availability.available && (
              <p class="cv-availability">
                <span class="cv-availability-dot" aria-hidden="true" />
                <span>{formatAvailability()}</span>
              </p>
            )
          }
        </div>
      </div>

      <!-- Contact Information - semantic address element -->
      <address class="cv-contact" itemprop="address">
        <ul class="cv-contact-list">
          <li class="cv-contact-item">
            <svg class="cv-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
