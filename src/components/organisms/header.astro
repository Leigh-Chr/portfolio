---
import Logo from "@/components/molecules/logo.astro";
import Navigation from "./navigation.astro";
---

<header class="header surface--static surface--header">
  <div class="header__content">
    <Logo />
    <Navigation aria-label="Navigation principale" />
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100; /* Navigation principale (niveau moyen) */
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 0; /* Padding fixe pour éviter les variations trop importantes */
    transition: all var(--transition-fast);
    will-change: transform, box-shadow;
  }

  .header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
    max-width: 1400px;
    margin-inline: auto;
    padding: var(--space-md);
  }

  /* ===== BREAKPOINTS INTELLIGENTS ===== */

  /* Tablette - Header compact, navigation inline */
  @media (max-width: 1199px) and (min-width: 768px) {
    .header__content {
      gap: var(--space-md);
    }

    .header {
      padding: 0.75rem 0; /* Padding fixe pour tablette */
    }
  }

  /* Mobile - Header vertical */
  @media (max-width: 767px) {
    .header__content {
      flex-direction: column;
      gap: var(--space-md);
      align-items: center;
    }
  }

  /* Mobile petit - Header vertical compact */
  @media (max-width: 479px) {
    .header__content {
      gap: var(--space-sm);
    }

    .header {
      padding: 0.5rem 0; /* Padding fixe pour mobile */
    }
  }

  /* Très petit écran - Garde les mêmes valeurs que mobile */
  @media (max-width: 359px) {
    .header__content {
      gap: var(--space-md);
    }

    .header {
      padding: 0.5rem 0; /* Padding fixe pour très petit mobile */
    }
  }

  /* ===== ANIMATIONS ET TRANSITIONS ===== */

  .header__content {
    transition:
      gap var(--transition-fast),
      flex-direction var(--transition-fast);
  }

  .header {
    transition:
      padding var(--transition-fast),
      background var(--transition-fast);
  }
</style>
