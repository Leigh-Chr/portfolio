---
import { ClientRouter } from 'astro:transitions';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import MemphisShapesFg from '@components/MemphisShapesFg.astro';
import { url } from '@utils/url';
import '../styles/global.css';

import dmSansLatinUrl from '@fontsource-variable/dm-sans/files/dm-sans-latin-wght-normal.woff2?url';
import spaceGroteskLatinUrl from '@fontsource-variable/space-grotesk/files/space-grotesk-latin-wght-normal.woff2?url';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = 'Portfolio de Virgil CHAREYRE - Développeur Web Fullstack',
  image = url('/images/profile.jpg'),
} = Astro.props;
const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site || 'https://leigh-chr.github.io');
const imageURL = new URL(image, Astro.site || 'https://leigh-chr.github.io');
const fullTitle = `${title} | Portfolio Virgil CHAREYRE`;

// JSON-LD structured data
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Virgil CHAREYRE',
  givenName: 'Virgil',
  familyName: 'CHAREYRE',
  jobTitle: 'Développeur Web Fullstack',
  url: 'https://leigh-chr.github.io/portfolio',
  image: imageURL.toString(),
  email: 'virgil.07@hotmail.fr',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Grenoble',
    addressRegion: 'Auvergne-Rhône-Alpes',
    addressCountry: 'FR',
  },
  sameAs: ['https://linkedin.com/in/virgil-chareyre', 'https://github.com/Leigh-Chr'],
  knowsAbout: [
    'JavaScript',
    'TypeScript',
    'React',
    'Node.js',
    'Python',
    'Développement Web',
    'Ingénierie Logicielle',
    'Architecture Logicielle',
    'Gestion de Projet',
    'Méthodologies Agile',
  ],
  knowsLanguage: [
    {
      '@type': 'Language',
      name: 'Français',
      alternateName: 'fr',
    },
    {
      '@type': 'Language',
      name: 'Anglais',
      alternateName: 'en',
    },
  ],
};
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Virgil CHAREYRE" />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="googlebot" content="index, follow" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL.toString()} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.toString()} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL.toString()} />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="Portfolio Virgil CHAREYRE" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL.toString()} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL.toString()} />

    <!-- Favicons & PWA -->
    <link rel="icon" type="image/svg+xml" href={url('/favicon.svg')} />
    <link rel="apple-touch-icon" href={url('/apple-touch-icon.svg')} />
    <link rel="manifest" href={url('/manifest.json')} />
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="color-scheme" content="dark" />

    <!-- Referrer Policy -->
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <!-- Preload critical fonts to break CSS→Font chain -->
    <link rel="preload" as="font" type="font/woff2" crossorigin href={dmSansLatinUrl} />
    <link rel="preload" as="font" type="font/woff2" crossorigin href={spaceGroteskLatinUrl} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Additional head content from child pages -->
    <slot name="head" />

    <!-- Astro View Transitions with prefetch -->
    <ClientRouter />

    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-dark-900 relative overflow-x-hidden">
    <!-- Skip to main content link for accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-primary-500 focus:text-dark-900 focus:font-heading focus:font-semibold"
    >
      Aller au contenu principal
    </a>
    <Header currentPath={currentPath} />
    <main id="main-content" class="flex-grow pt-20 relative z-10" tabindex="-1">
      <MemphisShapesFg />
      <slot />
    </main>
    <Footer />
    <script>
      const load = () => import('@scripts/animations');
      if ('requestIdleCallback' in window) {
        requestIdleCallback(load);
      } else {
        setTimeout(load, 200);
      }
    </script>
    <script define:vars={{ swUrl: url('/sw.js'), swScope: url('/') }}>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register(swUrl, { scope: swScope });
        });
      }
    </script>
  </body>
</html>
