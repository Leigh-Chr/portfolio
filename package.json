{
  "name": "portfolio",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint src --cache",
    "lint:fix": "eslint src --fix --cache",
    "format": "prettier --write \"src/**/*.{astro,ts,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{astro,ts,css,md}\"",
    "typecheck": "astro check --minimumSeverity warning --minimumFailingSeverity error",
    "knip": "knip",
    "audit:check": "npm audit --audit-level=high --omit=dev",
    "validate": "npm run typecheck && npm run lint && npm run stylelint && npm run mdlint && npm run format:check && npm run knip && npm run cpd && npm run audit:check",
    "cpd": "jscpd src",
    "stylelint": "stylelint \"src/**/*.css\" --cache",
    "stylelint:fix": "stylelint \"src/**/*.css\" --fix --cache",
    "mdlint": "markdownlint-cli2 \"src/**/*.md\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,astro}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix --cache",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint-cli2 --fix",
      "prettier --write"
    ]
  },
  "overrides": {
    "devalue": "^5.6.3"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.7.0",
    "@fontsource-variable/dm-sans": "^5.2.8",
    "@fontsource-variable/space-grotesk": "^5.2.10",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.17.1",
    "gsap": "^3.14.2",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@dreamsicle.io/stylelint-config-tailwindcss": "^1.2.2",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.2",
    "eslint-plugin-astro": "^1.6.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.8",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.21.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
