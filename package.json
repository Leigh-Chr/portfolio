  "devDependencies": {
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "prettier": "^3.8.1",
